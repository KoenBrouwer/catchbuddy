{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "moduleResolution": "node",
        "module": "Preserve",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "lib": ["es2022", "dom"],
        "noEmit": true,

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true
    }
}
